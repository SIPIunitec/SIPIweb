@model SIPIweb.Models.tbl_usuarioPersona_tmp

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{  
    tbl_usuario _usuario;
    _usuario = ViewData["usuario"] as tbl_usuario;
}
<h1>Create</h1>

<h4>tbl_usuarioPersona_tmp</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="persona_login" class="control-label"></label>
                <input asp-for="persona_login" class="form-control" value="@(_usuario.usuario_login)" readonly />
                <span asp-validation-for="persona_login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="persona_email" class="control-label"></label>
                <input asp-for="persona_email" class="form-control" value="@(_usuario.usuario_email)" readonly />
                <span asp-validation-for="persona_email" class="text-danger"></span>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="persona_nombres" class="control-label"></label>
                <input asp-for="persona_nombres" class="form-control" />
                <span asp-validation-for="persona_nombres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="persona_apellidos" class="control-label"></label>
                <input asp-for="persona_apellidos" class="form-control" />
                <span asp-validation-for="persona_apellidos" class="text-danger"></span>
            </div>
            @Html.Hidden("id_usuario", _usuario.id_usuario)
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

